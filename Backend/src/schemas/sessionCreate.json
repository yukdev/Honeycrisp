{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "ownerId": {
      "type": "string",
      "minLength": 1
    },
    "ownerName": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "price": {
            "type": "number",
            "minimum": 0
          },
          "quantity": {
            "type": "number",
            "minimum": 1
          }
        }
      }
    },
    "tax": {
      "type": "number",
      "minimum": 0
    },
    "tip": {
      "type": "number",
      "minimum": 0
    }
  },
  "additionalProperties": false,
  "required": ["ownerId", "ownerName", "name", "items", "tax", "tip"]
}
