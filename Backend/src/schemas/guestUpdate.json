{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "isGuest": {
      "type": "boolean"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "email": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30,
      "format": "email"
    },
    "paymentAddress": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "password": {
      "type": "string",
      "minLength": 5,
      "maxLength": 20
    }
  },
  "additionalProperties": false,
  "required": ["name", "email", "password", "isGuest"]
}
